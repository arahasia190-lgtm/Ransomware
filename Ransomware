    <script>
        const startButton = document.getElementById('start-prank-button');
        const forcedOverlay = document.getElementById('forced-overlay');
        const ransomwareContainer = document.getElementById('ransomware-container');
        const screenFlash = document.getElementById('screen-flash');
        const countdownElement = document.getElementById('countdown');
        const prankMessage = document.getElementById('prank-message');
        const logElement = document.getElementById('encryption-log');
        const ransomwareContent = document.querySelector('#ransomware-container .w-full');

        const fakeFiles = [ "kontak.vcf", "DCIM/foto_liburan.jpg", "WhatsApp/Databases/msgstore.db.crypt14", "Downloads/cv_lamaran.pdf", "data/system/accounts.db" ];

        async function startPrank() {
            // 1. Tampilkan kilat putih dan sembunyikan layar paksaan
            screenFlash.style.display = 'block';
            forcedOverlay.style.display = 'none';

            // 2. Mulai audio SEGERA untuk efek kejut maksimal
            await Tone.start();
            const noise = new Tone.Noise("white").toDestination();
            noise.volume.value = -10; // Cukup keras
            const filter = new Tone.AutoFilter("2n").toDestination().start();
            const alarm = new Tone.Oscillator("A4", "square").connect(filter).toDestination();
            alarm.volume.value = -5;
            
            // Mainkan suara
            noise.start();
            alarm.start();
            
            // 3. Masuk ke mode layar penuh
            if (document.documentElement.requestFullscreen) {
                document.documentElement.requestFullscreen().catch(err => {});
            }

            // 4. JEBAKAN TOMBOL KEMBALI
            history.pushState(null, "", location.href);
            window.addEventListener("popstate", () => {
                history.pushState(null, "", location.href);
            });

            // 5. Tampilkan konten ransomware setelah kilat selesai
            setTimeout(() => {
                ransomwareContainer.classList.remove('hidden');
            }, 200);

            // 6. Mulai simulasi enkripsi
            let fileIndex = 0;
            const encryptionInterval = setInterval(() => {
                if (fileIndex < fakeFiles.length) {
                    logElement.innerHTML += `[ENKRIPSI] /storage/emulated/0/${fakeFiles[fileIndex]}... OK<br>`;
                    logElement.scrollTop = logElement.scrollHeight;
                    fileIndex++;
                } else {
                    logElement.innerHTML += `<span class="text-yellow-400">[SELESAI] SEMUA DATA TERKUNCI</span>`;
                    clearInterval(encryptionInterval);
                }
            }, 600);

            // 7. Mulai hitungan mundur (1 menit)
            let duration = 60;
            const timer = setInterval(() => {
                duration--;
                const seconds = duration.toString().padStart(2, '0');
                countdownElement.textContent = `00:00:${seconds}`;

                if (duration <= 0) {
                    clearInterval(timer);
                    // Hentikan semua suara
                    noise.stop();
                    alarm.stop();
                    
                    // Tampilkan pesan prank
                    Array.from(ransomwareContent.children).forEach(child => {
                        if(child.id !== 'prank-message') child.classList.add('hidden');
                    });
                    prankMessage.classList.remove('hidden');
                }
            }, 1000);
        }

        startButton.addEventListener('click', startPrank);
        document.addEventListener('contextmenu', e => e.preventDefault());
    </script>
