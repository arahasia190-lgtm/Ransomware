            color: #ff0000;
            overscroll-behavior: contain;
        }

        #forced-overlay {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background-color: #000;
            z-index: 10000;
            display: flex; align-items: center; justify-content: center; text-align: center;
        }

        @keyframes pulse-border {
            0%, 100% { border-color: #ff0000; box-shadow: 0 0 30px #ff0000; }
            50% { border-color: #ffff00; box-shadow: 0 0 40px #ffff00; }
        }
        #error-box { animation: pulse-border 1.5s infinite; }

        #screen-flash {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background-color: white; z-index: 9998;
            display: none;
            animation: flash 0.2s forwards;
        }
        @keyframes flash {
            from { opacity: 1; } to { opacity: 0; }
        }

        .glitch-text { position: relative; }
        .glitch-text::before, .glitch-text::after {
            content: attr(data-text);
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: #000; overflow: hidden;
        }
        .glitch-text::before {
            left: 4px; text-shadow: -4px 0 #00ffff;
            animation: glitch-anim 1s infinite linear alternate-reverse;
        }
        .glitch-text::after {
            left: -4px; text-shadow: -4px 0 #ff00ff;
            animation: glitch-anim 1.5s infinite linear alternate-reverse;
        }
        @keyframes glitch-anim {
            0% { clip-path: inset(10% 0 90% 0); } 100% { clip-path: inset(75% 0 5% 0); }
        }
        @keyframes flicker {
            0%, 100% { opacity: 1; } 50% { opacity: 0.5; }
        }
        .flicker-screen { animation: flicker 0.05s infinite; }
        #encryption-log {
            height: 120px; overflow-y: hidden; border: 2px solid #ff0000;
